<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/study_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/study_btn_1"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginStart="35dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/shape_btn_study"
            android:drawableTop="@drawable/btn_level_1"
            android:gravity="center"
            android:paddingTop="25dp"
            android:text="@string/study_level_1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/study_btn_2"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/shape_btn_study"
            android:drawableTop="@drawable/btn_level_2"
            android:gravity="center"
            android:paddingTop="25dp"
            android:text="@string/study_level_2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/study_btn_3"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="right"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/shape_btn_study"
            android:drawableTop="@drawable/btn_level_3"
            android:gravity="center"
            android:paddingTop="25dp"
            android:text="@string/study_level_3"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/main_color"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:text="@string/study_title"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:lineSpacingExtra="10dp"
                android:text="@string/study_explain"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>


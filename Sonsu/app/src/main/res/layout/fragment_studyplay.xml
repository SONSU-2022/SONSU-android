<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/study_play_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <VideoView
        android:id="@+id/study_play_video"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/study_play_back_btn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㄱ(기역)"
        app:layout_constraintTop_toBottomOf="@id/study_play_video"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수형설명 주절주절 샬라샬라"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/study_play_line"
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:background="@color/list_bottom_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"/>

    <TextView
        android:id="@+id/study_play_tv_next_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음 강의보기"
        app:layout_constraintTop_toBottomOf="@+id/study_play_line"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/study_play_ib_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_level_1"
        app:layout_constraintTop_toBottomOf="@+id/study_play_tv_next_video"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㄴ(니은)"
        app:layout_constraintTop_toBottomOf="@+id/study_play_tv_next_video"
        app:layout_constraintStart_toEndOf="@+id/study_play_ib_thumbnail"/>


</androidx.constraintlayout.widget.ConstraintLayout>